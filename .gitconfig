[core]
	editor = micro
    pager = delta

[interactive]
    diffFilter = delta --color-only

[delta]
    navigate = true  # use n and N to move between diff sections

[merge]
    conflictstyle = diff3

[diff]
    colorMoved = default

[alias]
    autofixup = "!f() { COMMIT=$(git log --pretty=format:'%h-%s' | fzf --preview='git show --name-status $(echo {} | cut -d - -f 1)' --preview-window wrap | cut -d - -f 1); git commit --fixup $COMMIT; GIT_SEQUENCE_EDITOR=: git rebase --autostash --autosquash -i $COMMIT^; }; f"
    
[push]
  autoSetupRemote = true    
